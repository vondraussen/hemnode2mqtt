{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "python -m build"
        },
        {
            "label": "dev install",
            "type": "shell",
            "command": ". .venv/bin/activate && pip install --editable ."
        },
        {
            "label": "run",
            "type": "shell",
            "command": ". .venv/bin/activate && hemnode2mqtt"
        },
        {
            "label": "test",
            "type": "shell",
            "command": ". .venv/bin/activate && pytest -v"
        },
        {
            "label": "coverage",
            "type": "shell",
            "command": ". .venv/bin/activate && coverage run -m pytest && coverage report -m && coverage html"
        },
    ]
}
